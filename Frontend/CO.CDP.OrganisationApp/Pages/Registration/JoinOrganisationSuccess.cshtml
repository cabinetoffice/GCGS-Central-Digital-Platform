@page "/registration/{identifier}/join-organisation/success"
@model JoinOrganisationSuccessModel
@using CO.CDP.Localization

@{
    ViewData["Title"] = @StaticTextResource.OrganisationRegistration_JoinOrganisationSuccess_Heading;
    var organisationDetails = Model.OrganisationDetails!;
}

<a href="/organisation-selection" class="govuk-back-link">
    @StaticTextResource.Global_Back
</a>

<main class="govuk-main-wrapper">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <div class="govuk-panel govuk-panel--confirmation">
                <h1 class="govuk-panel__title">
                    @ViewData["Title"]
                </h1>
                <div class="govuk-panel__body">
                    @($"{@StaticTextResource.OrganisationRegistration_JoinOrganisationSuccess_Message} {@organisationDetails.Name}")
                </div>
            </div>
        </div>
    </div>
</main>
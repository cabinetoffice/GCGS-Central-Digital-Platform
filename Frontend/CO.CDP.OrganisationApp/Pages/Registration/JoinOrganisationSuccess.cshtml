@page "/registration/{identifier}/join-organisation/success"
@model JoinOrganisationSuccessModel

@{
    ViewData["Title"] = "Request to join sent";
    var organisationDetails = Model.OrganisationDetails!;
}

<a href="/organisation-selection" class="govuk-back-link">
    Back
</a>

<main class="govuk-main-wrapper">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <div class="govuk-panel govuk-panel--confirmation">
                <h1 class="govuk-panel__title">
                    @ViewData["Title"]
                </h1>
                <div class="govuk-panel__body">
                    You have successfully applied to join @organisationDetails.Name
                </div>
            </div>
        </div>
    </div>
</main>
                                    @Html.TextBoxFor(m => m.ScottishCharityRegulatorNumber, new { @class = "govuk-input " + (scottishCharityRegulatorNumberHasError ? "govuk-input--error" : ""), @id = "OfficeOfScottishCharityRegulatorNumber", @type = "text", spellcheck = "false", autocomplete = "off" })
                                </div>
                            </div>

                            <div class="govuk-radios__item">
                                <input class="govuk-radios__input" id="CCNI" name="OrganisationScheme" type="radio" value="CCNI" data-aria-controls="conditional-CCNI" @(Model.OrganisationScheme == "CCNI" ? "checked" : "")>
                                @Html.LabelFor(m => m.CharityCommissionNorthernIreland, new { @class = "govuk-label govuk-radios__label", @for = "CCNI" })
                            </div>
                            <div class="govuk-radios__conditional govuk-radios__conditional--hidden" id="conditional-CCNI">
                                <div class="govuk-form-group @(charityCommissionNorthernIrelandNumberHasError ? "govuk-form-group--error" : "")">

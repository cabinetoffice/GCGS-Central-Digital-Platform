                                    @Html.TextBoxFor(m => m.CharityCommissionNorthernIrelandNumber, new { @class = "govuk-input " + (charityCommissionNorthernIrelandNumberHasError ? "govuk-input--error" : ""), @id = "CharityCommissionNorthernIrelandNumber", @type = "text", spellcheck = "false", autocomplete = "off" })
                                </div>
                            </div>

                            <div class="govuk-radios__item">
                                <input class="govuk-radios__input" id="MPR" name="OrganisationScheme" type="radio" value="MPR" data-aria-controls="conditional-MPR" @(Model.OrganisationScheme == "MPR" ? "checked" : "")>
                                @Html.LabelFor(m => m.MutualsPublicRegister, new { @class = "govuk-label govuk-radios__label", @for = "MPR" })
                            </div>
                            <div class="govuk-radios__conditional govuk-radios__conditional--hidden" id="conditional-MPR">

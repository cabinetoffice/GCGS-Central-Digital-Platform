                                @Html.LabelFor(m => m.GuernseyRegistry, new { @class = "govuk-label govuk-radios__label", @for = "GRN" })
                            </div>
                            <div class="govuk-radios__conditional govuk-radios__conditional--hidden" id="conditional-GRN">

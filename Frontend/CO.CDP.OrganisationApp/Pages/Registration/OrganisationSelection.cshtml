@page "/registration/organisation-selection"
@using CO.CDP.Organisation.WebApiClient
@model OrganisationSelectionModel

@{
    string GetAddress(Address add)
    {
        return string.Join(", ", new[] { add.StreetAddress, add.StreetAddress2, add.Locality, add.CountryName, add.PostalCode }
            .Where(t => !string.IsNullOrWhiteSpace(t)));
    }
}

<main class="govuk-main-wrapper">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-l">
                <span class="govuk-label--l">Select or add an organisation</span>
            </h1>

            <table class="govuk-table">
                <caption class="govuk-table__caption govuk-table__caption--m">List of organisations</caption>
                <thead class="govuk-table__head">
                    <tr class="govuk-table__row">
                        <th scope="col" colspan="2" class="govuk-table__header">Organisation name</th>
                    </tr>
                </thead>
                <tbody class="govuk-table__body">
                    @{
                        foreach (var org in Model.Organisations)
                        {
                            <tr class="govuk-table__row">
                                <th scope="row" class="govuk-table__header">
                                    @org.Name
                                    <span class="govuk-hint govuk-!-display-block">
                                        @GetAddress(org.Address)
                                    </span>
                                </th>
                                <td class="govuk-table__cell">
                                    <a class="govuk-link govuk-link--no-visited-state"
                                       href="/registration/organisation-overview?id=@org.Id">Select</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

            <form method="post">
                <button type="submit" class="govuk-button" data-module="govuk-button">
                    Add Organisation
                </button>
            </form>
        </div>
    </div>
</main>
@page
@model IndexModel

@using CO.CDP.Localization
@using Microsoft.AspNetCore.Mvc.Localization

@{
    ViewData["Title"] = StaticTextResource.Supplementary_Index_Title;
}

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds govuk-body">
            @if (Request.Query.ContainsKey("one-login-error"))
            {
                <div class="govuk-error-summary" data-module="govuk-error-summary">
                    <div role="alert">
                        <h2 class="govuk-error-summary__title">
                            @StaticTextResource.Supplementary_Index_Problem
                        </h2>
                        <div class="govuk-error-summary__body">
                            <ul class="govuk-list govuk-error-summary__list">
                                <li><a class="govuk-link" href="#one-login-anchor">@StaticTextResource.Supplementary_Index_UnableToAuthenticate</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            }

            <h1 class="govuk-heading-l">
                <span class="govuk-label--l">@ViewData["Title"]</span>
            </h1>

            <p>@StaticTextResource.Supplementary_Index_Intro</p>

            <p>@StaticTextResource.Supplementary_Index_UseService</p>

            <ul class="govuk-list govuk-list--bullet">
                <li>@StaticTextResource.Supplementary_Index_ContractingAuthority</li>
                <li>@StaticTextResource.Supplementary_Index_Organisation</li>
            </ul>

            <p>@Html.Raw(@StaticTextResource.Supplementary_Index_CreateLogin)</p>

            <h2 class="govuk-heading-m">
                @StaticTextResource.Supplementary_Index_AlreadyRegistered
            </h2>

            <p>@Html.Raw(@StaticTextResource.Supplementary_Index_SignIn)</p>
        </div>
    </div>

@page "/organisation/{id}/supplier-information/postal-address-same-as-registered"
@using CO.CDP.Localization
@model CO.CDP.OrganisationApp.Pages.Supplier.AddressPostalSameAsRegisteredQuestionModel

@{
    ViewData["Title"] = @StaticTextResource.Supplier_AddressPostalSameAsRegisteredQuestion_Title;
    var hasError = ((TagBuilder)Html.ValidationMessageFor(m => m.SameAsRegisteredAddress)).HasInnerHtml;
}

@section BeforeContent {
    <a href="/organisation/@Model.Id/supplier-information/basic-information" class="govuk-back-link">@StaticTextResource.Global_Back</a>
}

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <partial name="_ErrorSummary" model="@Model.ModelState" />

            <h1 class="govuk-heading-l">
                @ViewData["Title"]
            </h1>

            <div id="hint" class="govuk-hint">
                @StaticTextResource.Supplier_AddressPostalSameAsRegisteredQuestion_Hint
            </div>

            <form method="post">
                <div class="govuk-form-group">
                    <fieldset class="govuk-fieldset">
                        <div class="govuk-radios" data-module="govuk-radios">
                            <div class="govuk-radios__item">
                                <input class="govuk-radios__input" id="YES" name="SameAsRegisteredAddress" type="radio"
                                   value="false" @(Model.SameAsRegisteredAddress == false ? "checked" : "")>
                                <label class="govuk-label govuk-radios__label" for="YES">@StaticTextResource.Global_Yes</label>
                            </div>

                            <div class="govuk-radios__item">
                                <input class="govuk-radios__input" id="NO" name="SameAsRegisteredAddress" type="radio"
                                   value="true" @(Model.SameAsRegisteredAddress == true ? "checked" : "")>
                                <label class="govuk-label govuk-radios__label" for="NO">@StaticTextResource.Global_No</label>
                            </div>
                        </div>
                    </fieldset>
                </div>
                <govuk-button>@StaticTextResource.Global_Continue</govuk-button>
            </form>
        </div>
    </div>

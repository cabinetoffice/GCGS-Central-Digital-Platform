@page "/organisation/{id}/supplier-information/connected-person/osc-company-question/{ConnectedEntityId?}"
@model CO.CDP.OrganisationApp.Pages.Supplier.ConnectedEntityOscCompanyQuestionModel
@{
    var oscCompaniesHouseNumberHasError = ((TagBuilder)Html.ValidationMessageFor(m => m.HasOscCompaniesHouseNumber)).HasInnerHtml
        || ((TagBuilder)Html.ValidationMessageFor(m => m.OscCompaniesHouseNumber)).HasInnerHtml;

}

<a href="/organisation/@Model.Id/supplier-information/connected-person/company-question/@Model.ConnectedEntityId" class="govuk-back-link">Back</a>

<main class="govuk-main-wrapper">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <partial name="_ErrorSummary" model="@Model.ModelState" />
            <span class="govuk-caption-l">@Model.Caption</span>
            <form class="form" method="post">
                <div class="govuk-form-group">
                    <fieldset class="govuk-fieldset" data-required="" data-error="Select yes if the organisation registered with Companies House" aria-required="true">

                        <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                            <h1 class="govuk-fieldset__heading">@Model.Heading</h1>
                        </legend>
                        <div id="hasOscCompaniesHouseNumber-hint" class="govuk-hint">
                            @Model.Hint
                        </div>

                        <div class="govuk-radios" data-module="govuk-radios">
                            <div class="govuk-radios__item">
                                <input class="govuk-radios__input" id="YES" name="HasOscCompaniesHouseNumber" type="radio"
                                       value="true" data-aria-controls="conditional-YES" @(Model.HasOscCompaniesHouseNumber == true ? "checked" : "")>
                                <label class="govuk-label govuk-radios__label" for="YES">Yes</label>
                            </div>

                            <div class="govuk-radios__conditional" id="conditional-YES">
                                <div class="govuk-form-group @(oscCompaniesHouseNumberHasError ? "govuk-form-group--error" : "")">
                                    <label class="govuk-label" for="OscCompaniesHouseNumber">
                                        What is the the registration number given under that Act?
                                    </label>
                                    <input class="govuk-input govuk-!-width-one-half @(oscCompaniesHouseNumberHasError ? "govuk-input--error" : "")"
                                           id="OscCompaniesHouseNumber" name="OscCompaniesHouseNumber" type="text" spellcheck="false" autocomplete="off"
                                           value="@(Model.HasOscCompaniesHouseNumber == true ? Model.OscCompaniesHouseNumber : "")">
                                </div>
                            </div>

                            <div class="govuk-radios__item">
                                <input class="govuk-radios__input" id="NO" name="HasOscCompaniesHouseNumber" type="radio"
                                       value="false" data-aria-controls="conditional-NO" @(Model.HasOscCompaniesHouseNumber == false ? "checked" : "")>
                                <label class="govuk-label govuk-radios__label" for="NO">No</label>
                                <div class="govuk-radios__conditional--hidden" id="conditional-NO"></div>
                            </div>
                        </div>

                    </fieldset>
                </div>

                <button class="govuk-button" type="submit">Continue</button>
            </form>
        </div>
    </div>
</main>

@page "/organisation/{id}/supplier-information/connected-person/declaration"
@model CO.CDP.OrganisationApp.Pages.Supplier.ConnectedEntityDeclarationModel
@using CO.CDP.Localization

@{
    ViewData["Title"] = StaticTextResource.Supplier_ConnectedEntity_ConnectedEntityDeclaration_PageTitle;
}

@section BeforeContent {
    <a href="/organisation/@Model.Id/supplier-information" class="govuk-back-link">@StaticTextResource.Global_Back</a>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form class="form" method="post">
            <h1 class="govuk-heading-l">
                @ViewData["Title"]
            </h1>
            <p class="govuk-body">
                @StaticTextResource.Supplier_ConnectedEntity_ConnectedEntityDeclaration_Paragraph1
            </p>
            <p class="govuk-body">
                @Html.Raw(StaticTextResource.Supplier_ConnectedEntity_ConnectedEntityDeclaration_Paragraph2)
            </p>
            <p class="govuk-body">
                @StaticTextResource.Supplier_ConnectedEntity_ConnectedEntityDeclaration_Paragraph3
            </p>

            <govuk-button>@StaticTextResource.Global_Continue</govuk-button>
        </form>
    </div>
</div>

@page "/organisation/{id}/supplier-information/supplier-qualification-question"
@model CO.CDP.OrganisationApp.Pages.Supplier.SupplierQualificationQuestionModel

<a href="/organisation/@Model.Id/supplier-information/basic-information" class="govuk-back-link">Back</a>

<main class="govuk-main-wrapper">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <partial name="_ErrorSummary" model="@Model.ModelState" />
            <h1 class="govuk-heading-l">Does anyone within your organisation have any relevant qualifications?</h1>
            <div id="hint" class="govuk-hint">A documented qualification, recognising competency and appropriate standards, within the business field or trade.</div>
            <form method="post">
                <div class="govuk-form-group">
                    <fieldset class="govuk-fieldset">
                        <div class="govuk-radios" data-module="govuk-radios">

                            <div class="govuk-radios__item">
                                <input class="govuk-radios__input" id="YES" name="HasRelevantQualifications" type="radio"
                                       value="true" data-aria-controls="conditional-YES" @(Model.HasRelevantQualifications == true ? "checked" : "")>
                                <label class="govuk-label govuk-radios__label" for="YES">Yes</label>
                            </div>

                            <div class="govuk-radios__item">
                                <input class="govuk-radios__input" id="NO" name="HasRelevantQualifications" type="radio"
                                       value="false" data-aria-controls="conditional-NO" @(Model.HasRelevantQualifications == false ? "checked" : "")>
                                <label class="govuk-label govuk-radios__label" for="NO">No</label>
                                <div class="govuk-radios__conditional--hidden" id="conditional-NO"></div>
                            </div>
                        </div>
                    </fieldset>
                </div>
                <button type="submit" class="govuk-button" data-module="govuk-button">Continue</button>
            </form>
        </div>
    </div>
</main>
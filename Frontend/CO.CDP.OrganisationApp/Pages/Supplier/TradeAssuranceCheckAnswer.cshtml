@page "/organisation/{id}/supplier-information/trade-assurance-check-answer"

@model CO.CDP.OrganisationApp.Pages.Supplier.TradeAssuranceCheckAnswerModel

<a href="/organisation/@Model.Id/supplier-information/trade-assurance-awarded-date" class="govuk-back-link">Back</a>

<main class="govuk-main-wrapper">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-three-quarters">

            <form class="form" method="post">

                <span class="govuk-caption-l">Trade assurance</span>
                <h1 class="govuk-heading-l">Check your answers</h1>
                <dl class="govuk-summary-list govuk-!-margin-bottom-3">

                    <div class="govuk-summary-list__row">
                        <dt class="govuk-summary-list__key">
                            Person or body, awarded by
                        </dt>
                        <dd class="govuk-summary-list__value">
                            @Model.TradeAssurance!.AwardedByPersonOrBodyName
                        </dd>
                        <dd class="govuk-summary-list__actions">
                            <a class="govuk-link" href="/organisation/@Model.Id/supplier-information/trade-assurance-body">
                                Change<span class="govuk-visually-hidden">
                                    the Qualification type
                                </span>
                            </a>
                        </dd>
                    </div>

                    <div class="govuk-summary-list__row">
                        <dt class="govuk-summary-list__key">
                            Trade assurance reference
                        </dt>
                        <dd class="govuk-summary-list__value">
                            @Model.TradeAssurance!.ReferenceNumber
                        </dd>
                        <dd class="govuk-summary-list__actions">
                            <a class="govuk-link" href="/organisation/@Model.Id/supplier-information/trade-assurance-reference">
                                Change<span class="govuk-visually-hidden">
                                    the qualification reference number
                                </span>
                            </a>
                        </dd>
                    </div>

                    <div class="govuk-summary-list__row">
                        <dt class="govuk-summary-list__key">
                            Trade assurance date
                        </dt>
                        <dd class="govuk-summary-list__value">
                            @Model.TradeAssurance!.DateAwarded!.Value.ToString("dd/MM/yyyy")
                        </dd>
                        <dd class="govuk-summary-list__actions">
                            <a class="govuk-link" href="/organisation/@Model.Id/supplier-information/trade-assurance-awarded-date">
                                Change<span class="govuk-visually-hidden">
                                    Date awarded
                                </span>
                            </a>
                        </dd>
                    </div>
                </dl>

                <div class="govuk-button-group govuk-!-margin-top-9">
                    <button class="govuk-button" data-module="govuk-button">
                        Save and continue
                    </button>
                </div>
            </form>
        </div>
    </div>
</main>
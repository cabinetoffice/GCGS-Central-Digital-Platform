@page "/organisation/{id}/supplier-information/legal-form-other-org"
@model CO.CDP.OrganisationApp.Pages.Supplier.LegalFormOtherOrganisationModel

@{
    var registeredOtherOrgHasError = ((TagBuilder)Html.ValidationMessageFor(m => m.OtherOrganisation)).HasInnerHtml;
}

<a href="/organisation/@Model.Id/supplier-information/company-act-question?selected=false" class="govuk-back-link">Back</a>

<main class="govuk-main-wrapper">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <partial name="_ErrorSummary" model="@Model.ModelState" />
            <form class="form" method="post">
                <div class="govuk-form-group @(registeredOtherOrgHasError ? "govuk-form-group--error": "")">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                        <h1 class="govuk-label-wrapper">
                            <label class="govuk-label govuk-label--l" for="legalForm-by-text">
                                Enter your organisation's registered legal form
                            </label>
                        </h1>
                    </legend>
                    <div class="govuk-radios govuk-!-margin-top-6" data-module="govuk-radios">
                        @if (registeredOtherOrgHasError)
                        {
                            <p id="legal-form-error" class="govuk-error-message">
                                <span class="govuk-visually-hidden">Error:</span> @Html.ValidationMessageFor(m => m.OtherOrganisation)
                            </p>
                        }

                        <div class="govuk-radios__item">
                            <input class="govuk-input" id="legalForm-by-text" name="@nameof(Model.OtherOrganisation)" value="@Model.OtherOrganisation">
                        </div>
                    </div>
                </div>
                <button class="govuk-button govuk-!-margin-top-4" data-prevent-double-click="true" data-module="govuk-button" type="submit">Save and continue</button>
            </form>
        </div>
    </div>
</main>
@page "/user/signedout"
@model CO.CDP.OrganisationApp.Pages.SignedOutModel

@using CO.CDP.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using System.Net

@{
    ViewData["Title"] = StaticTextResource.Supplementary_SignedOut_Title;
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">@ViewData["Title"]</h1>
        <p class="govuk-body">@Html.Raw(string.Format(StaticTextResource.Supplementary_SignedOut_Paragraph1, WebUtility.UrlEncode(Model.HomePageLink)))</p>
        <p class="govuk-body">@Html.Raw(StaticTextResource.Supplementary_SignedOut_Paragraph2)</p>
    </div>
</div>
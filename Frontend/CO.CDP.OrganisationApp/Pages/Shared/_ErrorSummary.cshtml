@model Microsoft.AspNetCore.Mvc.ModelBinding.ModelStateDictionary
@using CO.CDP.Localization

@if (!Model.IsValid)
{
	<div class="govuk-error-summary" data-module="govuk-error-summary">
		<div role="alert">
			<h2 class="govuk-error-summary__title">
                @StaticTextResource.Global_ErrorSummary_Heading
			</h2>
			<div class="govuk-error-summary__body">
				<ul class="govuk-list govuk-error-summary__list">
					@foreach (var ms in Model.Where(m => m.Value != null))
					{
						@foreach (var msv in ms.Value!.Errors)
						{
							<li><a href="#@ms.Key">@msv.ErrorMessage</a></li>
						}
					}
				</ul>
			</div>
		</div>
	</div>
}
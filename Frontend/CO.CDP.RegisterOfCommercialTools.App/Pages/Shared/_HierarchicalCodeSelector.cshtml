@using CO.CDP.RegisterOfCommercialTools.App.Models
@model (HierarchicalCodeSelectorOptions Options, IHierarchicalCodeSelection Selection)

@{
    var options = Model.Options;
    var selection = Model.Selection;
}

<div class="govuk-modal" id="@options.ModalId" tabindex="-1" role="dialog" aria-labelledby="@(options.ModalId)-title"
     aria-hidden="true">
    <div class="govuk-modal__dialog" role="document">
        <div class="govuk-modal__header">
            <h2 class="govuk-heading-m govuk-!-margin-bottom-0" id="@(options.ModalId)-title">
                @options.ModalTitle
            </h2>
            <button type="button" class="govuk-modal__close" data-dismiss="modal" aria-label="Close modal">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

        <div class="govuk-modal__body">
            <div class="govuk-form-group">
                <label class="govuk-label govuk-!-font-weight-bold" for="@options.SearchInputId">
                    @if (options.CodeType == "Location")
                    {
                        <text>Search locations</text>
                    }
                    else
                    {
                        <text>Search @options.CodeType codes</text>
                    }
                </label>
                <div id="@(options.SearchInputId)-hint" class="govuk-hint">
                    @if (options.CodeType == "Location")
                    {
                        <text>Search by code or location</text>
                    }
                    else
                    {
                        <text>Search by code or description</text>
                    }
                </div>
                <input class="govuk-input" id="@options.SearchInputId" type="text"
                       aria-describedby="@(options.SearchInputId)-hint"
                       placeholder="@options.SearchPlaceholder">

                <div id="@(options.SearchInputId)-results" class="govuk-!-display-none">
                    <div id="@options.SearchContainerId"></div>
                </div>
            </div>

            <div class="code-browser govuk-!-margin-top-8">
                <div id="code-hierarchy">
                    <h3 class="govuk-heading-s">Browse by category</h3>
                    <div id="@options.TreeContainerId" role="tree" aria-label="@options.CodeType code hierarchy">
                        <div class="govuk-body">
                            @if (options.CodeType == "Location")
                            {
                                <text>Loading locations...</text>
                            }
                            else
                            {
                                <text>Loading @options.CodeType codes...</text>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="govuk-summary-card govuk-!-margin-top-6">
                <div class="govuk-summary-card__title-wrapper">
                    <h3 class="govuk-summary-card__title">
                        @if (options.CodeType == "Location")
                        {
                            <text>Selected locations</text>
                        }
                        else
                        {
                            <text>Selected @options.CodeType codes</text>
                        }
                        (<span id="@(options.ModalId)-selection-count">@selection.SelectedCodes.Count</span>)
                    </h3>
                </div>
                <div class="govuk-summary-card__content">
                    <div id="@options.SelectionContainerId">
                        @if (selection.HasSelections)
                        {
                            <dl class="govuk-summary-list">
                                @foreach (var selectedItem in selection.SelectedItems)
                                {
                                    <div class="govuk-summary-list__row" data-code="@selectedItem.Code">
                                        @if (options.CodeType == "Location")
                                        {
                                            <dt class="govuk-summary-list__key">
                                                @selectedItem.GetDescription()
                                            </dt>
                                        }
                                        else
                                        {
                                            <dt class="govuk-summary-list__key">
                                                @selectedItem.Code
                                            </dt>
                                            <dd class="govuk-summary-list__value">
                                                @selectedItem.GetDescription()
                                            </dd>
                                        }
                                        <dd class="govuk-summary-list__actions">
                                            <button type="button" class="govuk-link code-remove-button"
                                                    aria-label="Remove @selectedItem.Code @selectedItem.GetDescription()"
                                                    data-code="@selectedItem.Code"
                                                    data-action="remove-selection">
                                                Remove
                                            </button>
                                        </dd>
                                    </div>
                                }
                            </dl>
                        }
                        else
                        {
                            <p class="govuk-body-s govuk-!-margin-bottom-0">
                                @if (options.CodeType == "Location")
                                {
                                    <text>No locations selected</text>
                                }
                                else
                                {
                                    <text>No @options.CodeType codes selected</text>
                                }
                            </p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="govuk-modal__footer">
            <div class="govuk-button-group">
                <button type="button" class="govuk-button" id="@(options.ModalId)-apply-selection">
                    Apply selection
                </button>
                <button type="button" class="govuk-button govuk-button--secondary" id="@(options.ModalId)-clear-all">
                    Clear all
                </button>
            </div>
        </div>
    </div>
</div>

    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div>
            &copy; 2025 - CO.CDP.RegisterOfCommercialTools.App
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)

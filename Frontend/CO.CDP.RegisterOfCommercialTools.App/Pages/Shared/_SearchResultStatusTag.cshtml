@using CO.CDP.RegisterOfCommercialTools.App.Models
@model CO.CDP.RegisterOfCommercialTools.App.Models.SearchResultStatus

@switch (Model)
{
    case SearchResultStatus.Active:
        <strong class="govuk-tag govuk-tag--turquoise">Active</strong>
        break;
    case SearchResultStatus.Upcoming:
        <strong class="govuk-tag govuk-tag--yellow">Upcoming</strong>
        break;
    case SearchResultStatus.Closed:
        <strong class="govuk-tag govuk-tag--red">Closed</strong>
        break;
    case SearchResultStatus.Awarded:
        <strong class="govuk-tag govuk-tag--blue">Awarded</strong>
        break;
    case SearchResultStatus.Unknown:
    default:
        <strong class="govuk-tag govuk-tag--grey">Unknown</strong>
        break;
}


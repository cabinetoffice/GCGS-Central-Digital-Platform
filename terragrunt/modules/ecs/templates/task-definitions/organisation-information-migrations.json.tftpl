[
  {
    "name": "${name}",
    "image": "${image}:${service_version}",
    "cpu": ${cpu},
    "memory": ${memory},
    "portMappings": [],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${lg_name}",
        "awslogs-region": "${lg_region}",
        "awslogs-stream-prefix": "${lg_prefix}"
      }
    },
    "environment": [
        {"name": "ASPNETCORE_ENVIRONMENT", "value": "${aspcore_environment}"},
        {"name": "Organisation__Authority", "value": "https://authority.${public_hosted_zone_fqdn}"},
        {"name": "OrganisationInformationDatabase_Server", "value": "${db_address}"},
        {"name": "OrganisationInformationDatabase_Database", "value": "${db_name}"}
    ],
    "secrets": [
        {"name": "MIGRATIONS_CONNECTION_STRING", "valueFrom": "${conn_string_location}"},
        {"name": "OrganisationInformationDatabase_Password", "valueFrom": "${db_username}"},
        {"name": "OrganisationInformationDatabase_Username", "valueFrom": "${db_password}"}
    ],
    "volumesFrom": [],
    "mountPoints": [],
    "essential": true
  }
]

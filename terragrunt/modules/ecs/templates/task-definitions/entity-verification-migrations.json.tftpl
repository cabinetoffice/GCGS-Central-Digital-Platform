[
  {
    "name": "${name}",
    "image": "${image}:${service_version}",
    "cpu": ${cpu},
    "memory": ${memory},
    "portMappings": [],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${lg_name}",
        "awslogs-region": "${lg_region}",
        "awslogs-stream-prefix": "${lg_prefix}"
      }
    },
    "environment": [
        {"name": "ASPNETCORE_ENVIRONMENT", "value": "${aspcore_environment}"},
        {"name": "Organisation__Authority", "value": "https://authority.${public_hosted_zone_fqdn}"},
        {"name": "EntityVerificationDatabase__Host", "value": "${db_address}"},
        {"name": "EntityVerificationDatabase__Server", "value": "${db_address}"},
        {"name": "EntityVerificationDatabase__Database", "value": "${db_name}"}
    ],
    "secrets": [
        {"name": "EntityVerificationDatabase__Password", "valueFrom": "${db_username}"},
        {"name": "EntityVerificationDatabase__Username", "valueFrom": "${db_password}"}
    ],
    "volumesFrom": [],
    "mountPoints": [],
    "essential": true
  }
]
